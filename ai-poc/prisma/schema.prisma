generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Class {
  week Int
  weekTitle String
  class String
  startDate DateTime
  endDate DateTime
  @@id([week, class])
  topic Topic[]
}

model Topic {
  taskId String @id
  weekId Int
  classId String
  topic String
  class Class @relation(fields: [weekId, classId], references: [week, class])
}

model Lab {
  labId Int @id @default(autoincrement())

}
